<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.soulchavez.volado108317.selectBet"
    android:background="@drawable/betac3">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/saldo"
        android:textSize="35dp"
        android:text="1000"

        android:layout_marginTop="5dp"
        android:layout_marginLeft="245dp"
        android:textColor="#7c4914" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnsello"

        android:src="@drawable/yapls"
        android:background="@android:color/transparent"
        android:layout_marginLeft="60dp"
        android:layout_marginStart="46dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="168dp"
        android:onClick="selloChoice" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnaguila"
        android:src="@drawable/aguilita"
        android:background="@android:color/transparent"
        android:layout_alignTop="@+id/btnsello"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="70dp"
        android:layout_marginEnd="64dp"
        android:onClick="aguilaChoice" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="5"
        android:id="@+id/apuesta"
        android:numeric="integer"
        android:background="#72010001"
        android:enabled="true"
        android:textColor="#ffffff"
        android:textSize="40dp"
        android:layout_below="@+id/btnsello"
        android:layout_toRightOf="@+id/btnsello"
        android:layout_marginTop="41dp"
        android:layout_alignRight="@+id/saldo"
        android:layout_alignEnd="@+id/saldo" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/apuestalbl"
        android:textSize="30dp"
        android:text="Apuesta:"

        android:textColor="#fffffb"
        android:layout_alignTop="@+id/apuesta"
        android:layout_toLeftOf="@+id/apuesta"
        android:layout_toStartOf="@+id/apuesta" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/readybtn"
        android:src="@drawable/ready"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="@android:color/transparent"
        android:onClick="apostar" />
</RelativeLayout>
